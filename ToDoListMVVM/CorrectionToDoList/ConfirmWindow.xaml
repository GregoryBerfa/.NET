<Window x:Class="CorrectionToDoList.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorrectionToDoList"
        mc:Ignorable="d"
        Title="ConfirmWindow" Height="150" Width="300">
    <Grid>
        <Label Content="Liste cible:" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="68"/>
        <ComboBox ItemsSource="{Binding ListeListe}" SelectedItem="{Binding ListeCible,Mode=TwoWay}" HorizontalAlignment="Left" Margin="83,32,0,0" VerticalAlignment="Top" Width="188"/>
        <Button Content="Valider" Command="{Binding CommandConfirm}" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="261"/>

    </Grid>
</Window>
